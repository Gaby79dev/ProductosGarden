<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <androidx.cardview.widget.CardView

        android:id="@+id/cvbolleriapeque"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:elevation="25dp"
        app:cardBackgroundColor="#D0CBE8"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07">

        <TextView
            android:id="@+id/txvpeque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/boller_a_peque_a"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/ivpeque"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="6dp"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/cvBolleriaGrande"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:elevation="25dp"
        app:cardBackgroundColor="#D0CBE8"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.821"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07">

        <TextView
            android:id="@+id/txvgrande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/boller_a_grande"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/ivgrande"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="6dp"
            tools:src="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/cvtartas"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:elevation="25dp"
        app:cardBackgroundColor="#D0CBE8"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvbolleriapeque"
        app:layout_constraintVertical_bias="0.253">

        <TextView
            android:id="@+id/txvtarta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/tartas"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/ivtarta"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="6dp"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/cvhelados"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:elevation="25dp"
        app:cardBackgroundColor="#D0CBE8"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvBolleriaGrande"
        app:layout_constraintVertical_bias="0.253">

        <TextView
            android:id="@+id/txvhelados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/helados"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/ivhelados"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="6dp"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>